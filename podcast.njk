---
layout: layouts/home.njk
permalink: /podcast/
eleventyNavigation:
  key: Podcast
  order: 1
---

<h1>Podcasts</h1>

{% set postslist = collections.podcast %}
<ol class="postlist">
{% for post in postslist %}
  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}"><time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
    <a href="{{ post.url | url }}" class="postlist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
    {% if post.data.audio %}
    <div class="Audio">
    <audio
        controls
        src="{{ post.data.audio | url }}">
            Your browser does not support the
            <code>audio</code> element.
    </audio></div>
    {% endif %}
    <span class="tags">{% for tag in post.data.tags %}
      {%- if collections.tagList.indexOf(tag) != -1 -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}</span>
  </li>
{% endfor %}
</ol>