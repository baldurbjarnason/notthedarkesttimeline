<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/styles.css' | url }}">
    <link rel="alternate" href="https://feedpress.me/notthedarkesttimeline-podcast" type="application/rss+xml" title="Not The Darkest Timeline podcast feed">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    
  </head>
  <body>
  <div class="Wrapper dotted">
    <header>
    <div class="home">
      <h1 class="home-title"><a href="{{ '/' | url }}">{{ metadata.title }}</a></h1>
      <p class="home-subtitle">A podcast on remarkable digital media</p>
    </div>

      {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
      <nav aria-label="Site navigation" class="Navigation">
      <ul class="nav">
      {%- for entry in collections.all | eleventyNavigation %}
        <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"><a href="{{ entry.url | url }}">{{ entry.title }}</a></li>
      {%- endfor %}
      </ul>
      </nav>
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>


      {{ content | safe }}

    </main>

    <footer></footer>

    <!-- Current page: {{ page.url | url }} -->
</div>
  </body>
</html>
